@{
    ViewBag.Title = "Produtos Cadastrados";
    ViewBag.pTitle = "Produtos Cadastrados";
    ViewBag.pageTitle = "Tables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!-- gridjs css -->
    <link rel="stylesheet" href="~/assets/libs/gridjs/theme/mermaid.min.css">
}

@if (!string.IsNullOrEmpty(ViewBag.MensagemErro))
{
    <div class="alert alert-danger">
        @ViewBag.MensagemErro
    </div>
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0 flex-grow-1">Lista de Produtos Cadastrados</h4>
            </div><!-- end card header -->

            <div class="card-body">
                <div id="table-gridjs"></div>

            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
<!-- end row -->
@section scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <!-- gridjs js -->
    <script src="~/assets/libs/gridjs/gridjs.umd.js"></script>
    <!-- gridjs init -->
    <script src="~/assets/js/pages/gridjs.init.js"></script>
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}
