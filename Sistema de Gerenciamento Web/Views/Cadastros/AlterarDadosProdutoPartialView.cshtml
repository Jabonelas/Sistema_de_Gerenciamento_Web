                                    <option selected disabled value="">@dadosProduto.pd_finalidade</option>
                                    <option>Venda</option>
                                    <option>Uso/Consumo</option>
                                    <option>Matéria Prima</option>
                                </select>
                                <span asp-validation-for="pd_finalidade" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Nome</label>
                                <input asp-for="pd_nome" type="text" class="form-control" value="@dadosProduto.pd_nome">
