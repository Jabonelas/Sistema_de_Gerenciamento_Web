                                <span asp-validation-for="pd_estoque_minimo" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>

                            <div class="col-md-12 position-relative">
                                <label class="form-label">Observações</label>
                                <textarea asp-for="pd_observacoes" class="form-control" value="@dadosProduto.pd_observacoes"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        @*<button class="btn btn-primary" type="submit">Atualizar Dados Produto</button>*@
        <button asp-controller="Cadastros" asp-action="AlterarDadosProduto" class="btn btn-primary" method="Put" type="submit">Atualizar Dados Produto2</button>
    </div>

    <br />
    @*}*@

</form>
