                                <span asp-validation-for="pd_nome" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label">Tipo Unidade</label>
                                <input asp-for="pd_tipo_unidade" type="text" class="form-control" placeholder="Ex.: Peça,Un,Kg" value="@dadosProduto.pd_tipo_unidade">
