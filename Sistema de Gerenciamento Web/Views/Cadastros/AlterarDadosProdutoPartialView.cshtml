                                    <option selected disabled value="">@dadosProduto.pd_tipo_produto</option>
                                    <option>Normal</option>
                                    <option>Composição</option>
                                    <option>Grade</option>
                                </select>
                                <span asp-validation-for="pd_tipo_produto" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Custos</label>
                                <input asp-for="pd_custo" type="text" class="form-control" id="formatandoDinheiro1" value="@dadosProduto.pd_custo.ToString().Replace(",", ".");">
                                @*<input asp-for="pd_custo" type="text" class="form-control" id="formatandoDinheiro1" value="@valorCustoProduto">*@
                                <span asp-validation-for="pd_custo" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Margem de Lucro</label>
                                <input type="text" class="form-control" id="campoPorcentagem" name="campoPorcentagem" value="@dadosProduto.pd_margem" placeholder="Digite a porcentagem...">
                                <span asp-validation-for="pd_margem" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>

                            <div class="col-md-2">
                                <label class="form-label">Preço Venda</label>
                                <input asp-for="pd_preco" type="text" class="form-control" id="formatandoDinheiro2" value="@valorPrecoProduto" required>
                                <span asp-validation-for="pd_preco" class="text-danger"></span>
                                <div class="invalid-tooltip">
                                    Campo Obrigatório.
                                </div>
                            </div>

                            <div class="col-md-2">
