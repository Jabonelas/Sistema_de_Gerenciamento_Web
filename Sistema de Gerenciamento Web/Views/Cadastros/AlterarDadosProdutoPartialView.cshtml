<form class="needs-validation form-group" asp-controller="Cadastros" asp-action="CadastrarProduto"
      onsubmit="removerSimboloR$Porcentagem()" method="put" novalidate>

    @*@if (dadosProduto != null)
    {*@
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Dados Produtos</h4>
                </div>
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Código Produto</label>
                                @*<input asp-for="pd_codigo" type="number" class="form-control" id="verificacaoCodigoProduto" value="@dadosProduto.pd_codigo" required>*@

