                                    <input asp-for="pd_codigo" type="number" class="form-control" id="verificacaoCodigoProduto" value="@dadosProduto.pd_codigo">
                                }

                                @*<input asp-for="pd_codigo" type="number" class="form-control" id="verificacaoCodigoProduto" required>*@
